CC = gcc
CCOPTS = -Wall -O2 -ffast-math -fPIC -g

# Do not change these:
LIBS = -lm
INCLUDE = -I/usr/include -I.
LDFLAGS = -L/usr/lib
LIB_DIR = .
SRC_DIR = .

all: 
	echo "done!"

# Ejemplo con multiples fuentes
# pa compilar:
#  make ./blah.so
blah_OBJS = PMSM_FOC.o kf.o
OBJS_WPATH = $(blah_OBJS:%.o=$(SRC_DIR)/%.o)

$(LIB_DIR)/blah.so: $(OBJS_WPATH)
	$(CC) -shared -Wl,-soname,$@ -o $@ $^

# La fuente consiste de un solo archivo: caca.c
# make caca.so
$(LIB_DIR)/%.so: $(SRC_DIR)/%.o
	$(CC) -shared -Wl,-soname,$@ -o $@ $<

%.o: %.c
	$(CC) $(INCLUDE) -c $(CCOPTS) $< $(LIBS)

clean:
	rm -rf *.so *.o


